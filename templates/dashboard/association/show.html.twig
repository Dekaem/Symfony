{% extends 'base.html.twig' %}

{% block title %}{{ association.name }} - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col mb-4">
                <h1>{{ association.name }}</h1>
                <a href="{{ path('association_edit', {'id': association.id}) }}"><i class="far fa-edit"></i></a>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>#</th>
                            <td>{{ association.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ association.name }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ association.description }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="container mt-3">
        <div class="row">
            <div class="col">
                <a href="{{ path('association_index') }}"><i class="fal fa-long-arrow-left me-1"></i>Retour</a>
            </div>
        </div>
    </div>
{% endblock %}