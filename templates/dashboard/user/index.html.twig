{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs - {{ parent() }}{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col d-flex justify-content-between mb-4">
				<h1>Utilisateurs - Liste</h1>
				<div class="">
					<a class="btn btn-primary" href="{{ path('user_new') }}">
						<i class="fal fa-plus"></i>
					</a>
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div class="col">
				<div class="card shadow-sm">
					<div class="card-body">
						<div class="table-responsive">
							{% if users|length >= 0 %}
								<table class="table table-bordered">
									<thead>
										<tr>
											<th>#</th>
											<th>Prénom</th>
											<th>Nom</th>
											<th>Association</th>
											<th>Téléphone</th>
											{# <th>Role</th> #}
											<th>E-mail</th>
											<th>Actions</th>
										</tr>
									</thead>
									<tbody>
										{% for user in users %}
											<tr>
												<td>{{ user.id }}</td>
												<td>{{ user.firstname }}</td>
												<td>{{ user.lastname }}</td>
												<td>{{ user.association ? user.association.name : "" }}</td>
												<td>{{ user.phone }}</td>
												{# <td>{{ user.roles ? user.roles|json_encode : '' }}</td> #}
												<td>{{ user.email }}</td>
												<td>
                                                    <a class="btn btn-outline-success btn-sm mb-1" href="{{ path('user_show', {'id': user.id}) }}"><i class="fal fa-eye fa-fw"></i></a>
                                                    <a class="btn btn-outline-warning btn-sm mb-1" href="{{ path('user_edit', {'id': user.id}) }}"><i class="fal fa-pen fa-fw"></i></a>
													<a class="btn btn-outline-info btn-sm mb-1" href="{{ path('user_new_password', {'id': user.id}) }}"><i class="fal fa-lock fa-fw"></i></a>
                                                    <a class="btn p-0 mb-1">{{ include('dashboard/user/_delete_form.html.twig') }}</a>
												</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							{% else %}
								<div class="alert alert-info text-center m-0" role="alert">
									Pas d'enregistrement pour le moment.
								</div>
							{% endif %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}