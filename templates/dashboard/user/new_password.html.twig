{% extends 'base.html.twig' %}

{% block title %}Nouveau mot de passe - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col mb-4">
                <h1>Nouveau mot de passe | {{ user.firstname }} {{ user.lastname }}</h1>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="card shadow-sm">
                    <div class="card-body">
                        {{ form_start(form) }}
                            {{ form_row(form.password) }}
                            <button class="btn btn-primary">{{ button_label|default('Valider') }}</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-3">
        <div class="row">
            <div class="col">
                <a href="{{ path('user_index') }}"><i class="fal fa-long-arrow-left me-1"></i>Retour</a>
            </div>
        </div>
    </div> 
{% endblock %}